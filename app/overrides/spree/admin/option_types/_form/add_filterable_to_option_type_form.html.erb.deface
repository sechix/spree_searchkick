<!-- insert_bottom 'div[data-hook=admin_option_type_form_fields]' -->
<div class="col-md-6">
  <%= f.field_container :filterable, class: ['form-group'] do %>
    <%= f.label :filterable, Spree.t(:filterable) %> <span class="required">*</span>
    <%= error_message_on :option_type, :filterable, :class => 'error-message' %>
    <%= check_box :option_type, :filterable, :class => 'form-control' %>
  <% end %>
</div>